<%- include("partials/header") %>
<h3 class="text-center font-weight-light"><%=p.title%></h3>
<hr class="ml-3">
<div class="row text-center ">
  <div class="col-sm-8 col-md-7 col-lg-6 text-center">
    <a data-fancybox="gallery" href="/images/product_imgs/<%=p.id%>/<%=p.image%>">
      <img id="proimg" class="spi card" src="/images/product_imgs/<%=p.id%>/<%=p.image%>" width= "auto"; height="700px" style="align-items: center;" alt="">
    </a> <br>
  </div>
  <div id="protext" class="col-sm-4 col-md-5 col-lg-6 display-inline">
    <p class="lead"><%=p.desc%></p>
    <h6>â‚¹<%=parseFloat(p.price).toFixed(2)%></h6>
    <% if(loggedIn) { %>
    <p><a class="btn  btn-primary" href="/cart/add/<%=p.slug%>"><i class="fas fa-cart-plus"></i> ADD TO CART</a></p>
    <% } else { %>
    <p> <a href="/users/login">Login </a> To Add Products To Cart</p>
    <% } %>
  </div>
</div>
<div class="row">
  <div class="col-sm-12 col-md-12 col-lg-12 ml-0">
    <ul class="gallery">
      <% galleryImages.forEach(function(image){ %>
      <% if(image != "thumbs") { %>
      <li>
        <a data-fancybox="gallery" href="/images/product_imgs/<%=p.id%>/gallery/<%=image%>">
          <img class="spi card" src="/images/product_imgs/<%=p.id%>/gallery/thumbs/<%=image%>" alt="">
        </a>
      </li>
      <%}%>
      <% }); %>
    </ul>
  </div>
</div>
<%- include("partials/footer") %>