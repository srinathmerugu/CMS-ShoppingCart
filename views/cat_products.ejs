<%- include("partials/header") %>
<h1 class="text-center font-weight-light p-0 mb-5"><%=title.toUpperCase()%></h1>
<div class="row products text-center ">
    <%products.forEach(function(p){ %>
        
        <div class=" col-xl-3 col-lg-4 col-md-5 col-sm-6 mb-5">
            <div id="cards" >
                <a href="/products/<%=p.category%>/<%=p.slug%>" class="pa">
                    <img src="/images/product_imgs/<%=p.id%>/<%=p.image%>" class="card-img-top" alt="...">
                </a>
                <div id="cardsbody" class="card-body">
                    <a style="text-decoration: none;color: #0060B6;" href="/products/<%=p.category%>/<%=p.slug%>"> <h5 class="card-title"><%=p.title%></h5></a>
                  <p class="card-text">â‚¹<%=parseFloat(p.price).toFixed(2)%></p>
                  <a class="btn btn-sm btn-primary mt-0" href="/cart/add/<%=p.slug%>"><i class="fas fa-cart-plus"></i> ADD TO CART</a>

                </div>
            </div>
        </div>
    <% }); %>
</div>

<%- include("partials/footer") %>