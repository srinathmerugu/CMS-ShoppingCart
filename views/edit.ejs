<%- include("partials/header") %>
<h4 class="text-center  font-weight-light font-italic"> PROFILE DETAILS</h4>
<div class="row" style="margin: 0 auto; width: 300px;">
    <div class="col-lg-12">
            
    
              <div class="former">
                    <form action="/users/profile/<%=user._id%>?_method=PUT" method="post"> 
                        <label class="mt-3">Username</label>
                        <input class="form-control " type ="text" name="user[username]" value="<%= user.username %>" disabled>
                            <small id="usernameHelpBlock" class="form-text text-muted mb-2">
                            Sorry, You can't change your Username once after signup.
                            </small>
                        <div class="form-group">
                          <label for="name">Name</label> 
                          <input class="form-control"  name="user[name]" type="text" value="<%=user.name%>" placeholder="Name" >  
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label> 
                            <input class="form-control" id="email" name="user[email]" value="<%=user.email%>" type="text" placeholder="abc@gmail.com" >  
                          </div>
                        
                        <div class="form-group">
                          <label for="phone">Phone</label> 
                          <input class="form-control"  name="user[phone]" type="text" value="<%=user.phone%>"  placeholder="Phone" >  
                        </div>
                        <div class="form-group">
                          Gender
                         <select class="form-control" name="user[gender]" id="">
                           <option value="male">Male</option>
                           <option value="female">female</option>
                           <option value="other">Rather Not say</option>
                         </select>
                       </div>
                        <button type="submit" class="btn btn-primary mt-3 mb-2">UPDATE</button>
                    </form>
                  
                  
    </div>
</div>

<%- include("partials/footer") %>