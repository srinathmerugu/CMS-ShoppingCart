<%- include("partials/header") %>

<div class="row" style="margin: 0 auto; width: 300px;">
    <div class="col-lg-12">
            <h1 class="text-center font-weight-light ">SIGN IN</h1>
    
              <div class="former">
                    <form action="/users/login" method="post"> 
                        
                        
                        <div class="form-group">
                          <label for="username">Username</label> 
                          <input class="form-control"  name="username" type="text" placeholder="Username" >  
                        </div>
                        <div class="form-group">
                          <label for="password">Password</label> 
                          <input class="form-control" id="password" name="password" type="password" placeholder="Password">  
                        </div>
                        
                        <button type="submit" class="btn btn-success mb-2">Sign In</button>
                    </form>
                  
                  <a href="/users/register" >Don't Have An Account? Sign Up</a>
    </div>
</div>

<%- include("partials/footer") %>